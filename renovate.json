{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:best-practices", ":dependencyDashboard", ":semanticCommits", ":maintainLockFilesWeekly"],
	"labels": ["dependencies"],
	"packageRules": [
		{
			"matchUpdateTypes": ["minor", "patch"],
			"groupName": "all non-major dependencies",
			"groupSlug": "all-minor-patch",
			"matchPackageNames": ["*"],
			"automerge": true,
			"automergeType": "pr",
			"automergeStrategy": "auto"
		},
		{
			"matchPackageNames": ["bun"],
			"matchManagers": ["github-actions"],
			"extends": ["schedule:weekly"]
		}
	],
	"ignoreDeps": [],
	"rangeStrategy": "bump",
	"automerge": true,
	"automergeType": "pr",
	"automergeStrategy": "auto",
	"platformAutomerge": true,
	"vulnerabilityAlerts": { "automerge": true },
	"postUpdateOptions": ["bunDedupe"]
}
