{
	"name": "@amphi/cli",
	"version": "0.0.1",
	"type": "module",
	"bin": {
		"amphi": "dist/cli.js"
	},
	"main": "dist/cli.js",
	"exports": {
		".": {
			"import": "./dist/cli.js",
			"default": "./dist/cli.js"
		}
	},
	"scripts": {
		"prebuild": "bun run --filter @amphi/shared generate:ascii",
		"build": "bun build source/cli.tsx --outdir dist --target bun --conditions=production",
		"prebuild:exe": "bun run --filter @amphi/shared generate:ascii",
		"build:exe": "bun run build:exe:macos && bun run build:exe:windows",
		"build:exe:macos": "bun build source/cli.tsx --compile --outfile dist/amphi-macos --conditions=production",
		"build:exe:windows": "bun build source/cli.tsx --compile --target=bun-windows-x64 --outfile dist/amphi-windows.exe --conditions=production",
		"lint": "bunx --bun eslint .",
		"lint:fix": "bunx --bun eslint . --fix",
		"dev": "bun --conditions=production source/cli.tsx",
		"start": "bun --conditions=production dist/cli.js",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@amphi/shared": "*",
		"@tanstack/react-query": "5.90.14",
		"exceljs": "4.4.0",
		"ink": "6.6.0",
		"react": "19.2.3",
		"uuid": "13.0.0"
	},
	"devDependencies": {
		"@types/bun": "1.3.5",
		"@types/node": "24.10.1",
		"@types/react": "19.2.7",
		"react-devtools-core": "7.0.1",
		"typescript": "5.9.3"
	}
}
