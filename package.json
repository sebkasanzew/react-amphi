{
	"name": "react-amphi-monorepo",
	"version": "0.0.1",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo build",
		"dev": "bun run dev:web",
		"dev:web": "turbo dev --filter=@amphi/web --log-prefix=none",
		"dev:cli": "cd apps/cli && bun run dev",
		"test": "turbo test:e2e --filter=@amphi/web",
		"lint": "turbo lint && bun run lint:root",
		"lint:fix": "turbo lint -- --fix && bun run lint:fix:root",
		"lint:root": "bunx --bun eslint './{*.json,*.js,*.mjs,*.mts,*.ts}' --ext .json,.jsonc,.json5,.js,.ts,.mjs,.mts",
		"lint:fix:root": "bun run lint:root --fix",
		"typecheck": "turbo typecheck"
	},
	"devDependencies": {
		"@eslint/compat": "2.0.2",
		"@eslint/js": "10.0.1",
		"@typescript-eslint/parser": "8.56.0",
		"eslint": "10.0.0",
		"eslint-config-flat-gitignore": "2.1.0",
		"eslint-config-prettier": "10.1.8",
		"eslint-plugin-jsonc": "2.21.1",
		"eslint-plugin-playwright": "2.5.1",
		"eslint-plugin-prettier": "5.5.5",
		"eslint-plugin-turbo": "2.8.9",
		"eslint-plugin-unicorn": "63.0.0",
		"prettier": "3.8.1",
		"turbo": "2.8.9",
		"typescript": "5.9.3",
		"typescript-eslint": "8.56.0",
		"vercel": "50.18.0"
	},
	"packageManager": "bun@1.3.4",
	"trustedDependencies": [
		"node-pty"
	]
}
